<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <RelativeLayout
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@drawable/menu_bg">
  	<com.scheffsblend.smw.AnimatedImageView
  		android:id="@+id/smwLogo"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentTop="true"
  		android:layout_centerHorizontal="true"
  		android:layout_margin="20dp"
  		android:src="@drawable/smw_logo"/>
  	<ImageView 
  		android:id="@+id/smwBanner"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_alignParentBottom="true"
  		android:layout_centerHorizontal="true"
  		android:src="@drawable/smw_android_banner"/>
  	<Button 
  		android:id="@+id/launchGame"
  		android:layout_width="180dp"
  		android:layout_height="wrap_content"
  		android:layout_centerInParent="true"
  		android:text="Launch Game"
  		android:textColor="#FFFF00"
  		android:textStyle="bold"
  		android:textSize="30dp"
  		android:background="@drawable/custom_button"/>
  	<TextView 
  		android:id="@+id/spacer"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:layout_below="@+id/launchGame"
  		android:layout_centerHorizontal="true"
  		android:text=""
  		android:layout_margin="5dp"
  	/>
  	<Button 
  		android:id="@+id/instructions"
  		android:layout_width="180dp"
  		android:layout_height="wrap_content"
  		android:layout_toLeftOf="@+id/spacer"
  		android:layout_below="@+id/launchGame"
  		android:layout_marginTop="10dp"
  		android:text="Instructions"
  		android:textColor="#FFFF00"
  		android:textStyle="bold"
  		android:textSize="30dp"
  		android:background="@drawable/custom_button"/>
  	<Button 
  		android:id="@+id/settings"
  		android:layout_width="180dp"
  		android:layout_height="wrap_content"
  		android:layout_toRightOf="@+id/spacer"
  		android:layout_below="@+id/launchGame"
  		android:layout_marginTop="10dp"
  		android:text="Settings"
  		android:textColor="#FFFF00"
  		android:textStyle="bold"
  		android:textSize="30dp"
  		android:background="@drawable/custom_button"/>
  </RelativeLayout>
    
</LinearLayout>
